<h1>All Articles</h1>

<%= link_to 'Home', home_index_path %> <%= link_to 'New article', new_article_path %>
<br>
<br>
<table>
    <tr>
        <th>Title</th>
        <th>Content</th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td><%= link_to article.title, article %></td>
            <td><%= article.content %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
            <td><%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Press 'OK' if you're a dickhead?" } %></td>
        </tr>
    <% end %>
</table>



