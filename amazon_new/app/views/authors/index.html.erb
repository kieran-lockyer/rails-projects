<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Books</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.name %></td>
        <td><%= image_tag author.image, width: 250, alt: author.name, title: author.name unless [nil, ''].include?(author.image)  %></td>
        <td>
          <ul>
            <% for book in author.books %>
              <li><%= link_to book.title, book %></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', author %></td>
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
