<h1>Nuculer Codes!!!</h1>
<% if current_user.has_role?(:president) %>
    <p>Welcome Mr. President</p>
    <p><%= @code[0..@code.length / 2] %></p>
<% elsif current_user.has_role?(:defence) %>
    <p>Welcome Mr. Secretary of Defence</p>
    <p><%= @code[(@code.length / 2 + 1)..@code.length] %></p>
<% elsif current_user.has_role?(:russians) %>
    <p>Welcome Mr. Putin</p>
    <p><%= @code %></p>
<% else %>
    <p>Nothing to see here...</p>
<% end %>

<% if user_signed_in? %>
    <h4>Logged in as <%= current_user.email %></h4>
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
<% else %>
    <%= link_to 'Login or Sign Up!', new_user_session_path %>
<% end %>
